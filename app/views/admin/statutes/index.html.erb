  <table>
    <%= link_to("New statute", new_admin_statute_path , :class => "btn btn-primary pull-right" ) %>

    <thead> 
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Content </td>
      </tr>
    </thead>
    
    <tbody>
            <% @statute.each do |s| %> 
    <tr>
      <td> # </td>  
      <td>  <%= link_to(truncate(s.title, :length => 15), admin_statute_path(s)) %> </td>
      <td>  <%= s.content %> </td>
      <td>
         <% if current_administrator %>  
            <%= link_to("Edit", edit_admin_statute_path(s), :class => "btn btn-sm btn-default")%>
        <% end %>
      </td> 
    </tr>
            <% end %> 
    </tbody>
  </table>