<div class="container-fluid">
  <hr>
  <div class="col-md-2 col-md-offset-5">
    <%= form_for [:admin, @record] do |f| %>
      <% if @record.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@record.errors.count, "error") %> prohibited this rotator from being saved:</h2>
          <ul>
            <% @record.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-controller">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :description %><br>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :organization %><br>
        <%= f.text_field :organization_id, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :date %><br>
        <%= f.text_field :date, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :lacation %><br>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :image_large %><br>
        <%= f.file_field :image_large %>
      </div>
      <div class="form-controller">
        <%= f.label :image_small %><br>
        <%= f.file_field :image_small %>
      </div>
      <div class="form-controller">
        <%= f.label :file %><br>
        <%= f.file_field :file %>
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "Submit", :disable_with => 'Submitting...', :class => "btn btn-primary"%> 
        <%= link_to 'Back', admin_records_path %>
      </div>
    <% end %>
  </div>
</div>
