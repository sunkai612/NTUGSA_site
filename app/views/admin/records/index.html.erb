<table>
    <%= link_to("New record", new_admin_record_path , :class => "btn btn-primary pull-right" ) %>

    <thead> 
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Content </td>
      </tr>
    </thead>
    
    <tbody>
            <% @record.each do |r| %> 
    <tr>
      <td> # </td>  
      <td>  <%= link_to(truncate(r.title, :length => 15), admin_record_path(r)) %> </td>
      <td>  <%= r.content %> </td>
      <td>
         <% if current_administrator %>  
            <%= link_to("Edit", 
                        edit_admin_record_path(r), 
                        :class => "btn btn-sm btn-default")%>

            <%= link_to("Delete", 
                        admin_record_path(r), 
                        :class => "btn btn-sm btn-default", 
                        :method=>:delete,
                        data: { confirm: "Are you sure?" } )%>
        <% end %>
      </td> 
    </tr>
            <% end %> 
    </tbody>
  </table>