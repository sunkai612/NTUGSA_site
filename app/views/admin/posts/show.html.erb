<h1 class="text-center">留言總覽</h1>
<div class="col-md-12">
  <%= link_to("Back", admin_board_path(@board), :class => "btn btn-warning") %>
  <table class="table">
    <thead> 
      <tr>
        <th> # </th>
        <th> 論壇 </th>
        <th> 文章 </th>
        <th> 留言者 </th>
        <th> 內容 </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @comment.each do |c| %> 
        <tr>
          <td> # </td>  
          <td>  <%= truncate(c.post.board.name, :length => 13) %> </td>
          <td>  <%= truncate(c.post.title, :length => 13) %> </td>
          <td>  <%= truncate(c.commenter, :length => 13) %> </td>
          <td>  <%= truncate(c.content, :length => 43) %> </td>
          <td>
            <% if current_administrator %>  
              <%= link_to("刪除", 
                        admin_board_post_comment_path(@board, @post, c), 
                        :class => "btn btn-sm btn-default", 
                        :method=>:delete,
                        data: { confirm: "確定刪除?" } )%>
            <% end %>
          </td> 
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>
