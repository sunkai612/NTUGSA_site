<h1 class="text-center">研協介紹</h1>
<div class="col-md-12">
  <table class="table">
    <thead> 
      <tr>
        <th> # </th>
        <th> 標題 </th>
        <th> 內容 </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @intro.each do |i| %> 
        <tr>
          <td> # </td>  
          <td>  <%= truncate(i.title, :length => 13) %> </td>
          <td>  <%= truncate(i.content, :length => 53) %> </td>
          <td>
            <% if current_administrator %>  
              <%= link_to("Edit", 
                        edit_admin_intro_path(i), 
                        :class => "btn btn-sm btn-default")%>
            <% end %>
          </td> 
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>
