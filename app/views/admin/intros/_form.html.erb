<div class="container-fluid">
  <hr>
  <div class="col-md-2 col-md-offset-5">
    <%= form_for [:admin, @intro] do |f| %>
      <% if @intro.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rotator.errors.count, "error") %> prohibited this rotator from being saved:</h2>
          <ul>
            <% @intro.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-controller">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-controller">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: "form-control", style: "height: 200px;" %>
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "Submit", :disable_with => 'Submitting...', :class => "btn btn-primary"%> 
        <%= link_to 'Back', admin_intros_path %>
      </div>
    <% end %>
  </div>
</div>