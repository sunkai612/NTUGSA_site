<hr>
<%= form_for [:admin, @event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-controller">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-controller">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="form-controller">
    <%= f.check_box :is_gsa %>
    <%= f.label :isGSA? %><br>
  </div>
  <div class="form-controller">
    <%= f.label :organization %><br>
    <%= f.text_field :organization %>
  </div>
  <div class="form-controller">
    <%= f.label :date %><br>
    <%= f.text_field :event_date %>
  </div>
  <div class="form-controller">
    <%= f.label :lacation %><br>
    <%= f.text_field :location %>
  </div>
  <div class="form-controller">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="form-controller">
    <%= f.label :signUpLink %><br>
    <%= f.text_field :link %>
  </div>
  <div class="form-controller">
    <%= f.label :videoLink %><br>
    <%= f.text_field :video %>
  </div>
  <div class="form-controller">
    <%= f.label :image_large %><br>
    <%= f.file_field :image_large %>
  </div>
  <div class="form-controller">
    <%= f.label :image_small %><br>
    <%= f.file_field :image_small %>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Submit", :disable_with => 'Submitting...', :class => "btn btn-primary"%> 
  </div>
<% end %>
