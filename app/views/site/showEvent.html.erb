<div id="fb-root"></div>
<script>
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.0";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>
<div class="container-fluid">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1 style="text-align: center;"><%= @event.title %></h1>
    <h3 style="text-align: center;"><%= @event.description %></h3>
    <br>
    <div style="margin-left:44%;">
      <div class="fb-like" data-href="http://www.ntugsa.com/site/<%= @event.id %>/event" data-width="100px" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
    </div>
    <br>
    <%= image_tag @event.image_large.url, style: "width: 100%" %>
    <hr>
    <div class="row">
      <div class="col-md-3" style="text-align:center;">
        <h5><%= @event.organization %></h5>
      </div>
      <div class="col-md-6" style="text-align:center;">
        <h5><%= @event.event_date.to_s(:long) %></h5>
      </div>
      <div class="col-md-3" style="text-align:center;">
        <h5><%= @event.location %></h5>
      </div>
    </div>
    <hr>
    <% unless (@event.video == "") || (@event.video == nil) %>
      <iframe style="margin-left:20%;" width="560" height="315" src="//www.youtube.com/embed/<%= @event.video %>" frameborder="0" allowfullscreen></iframe>
      <hr>
    <% end %>
    <br>
    <br>
    <br>
    <h4><%= simple_format(@event.content) %></h4>
    <br>
    <br>
    <br>
    <hr>
    <div class="row">
      <div class="col-md-4" style="background-image:url('<%= @event_prev.image_small.url %>')">
        <a href="/site/<%= @event_prev.id %>/event">
          <div class="prev_next_btn">
            <h4><%= truncate(@event_prev.title, :length => 13) %></h4>
          </div>
        </a>
    </div>
        <div class="col-md-4">
          <br>
          <br>
          <br>
          <% unless @event.link == "" %>
            <%= link_to @event.link, target: "_blank" do %>
              <p style="margin-left:31%;">
                <button type="button" class="btn btn-info btn-lg">報名活動</button>
              </p>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-4" style="background-image:url('<%= @event_next.image_small.url %>')">
          <a href="/site/<%= @event_next.id %>/event">
            <div class="prev_next_btn">
              <h4><%= truncate(@event_next.title, :length => 13) %></h4>
            </div>
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
</div>
