<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<h1 style="text-align: center;"><%= @event.title %></h1>
		<h3 style="text-align: center;"><%= @event.description %></h1>
		<img src="<%= @event.image_large.url %>" style="width:100%;">
		<h4>
			主辦單位： <%= @event.organization %>
			活動時間： <%= @event.event_date %>
			活動地點： <%= @event.location %>
		</h4>
		<iframe style="margin-left:auto; margin-right:auto;" width="560" height="315" src="//www.youtube.com/embed/<%= @event.video %>" frameborder="0" allowfullscreen></iframe>
		<h4>
			<%= simple_format(@event.content) %>
		</h4>
		<a href="<%= @event.link %>">
			<p>
				<button type="button" class="btn btn-info btn-lg">報名活動</button>
			</p>
		</a>
	</div>
	<div class="col-md-2"></div>
</div>