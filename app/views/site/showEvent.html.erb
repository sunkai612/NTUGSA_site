<body>
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.0";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h1 style="text-align: center;"><%= @event.title %></h1>
			<h3 style="text-align: center;"><%= @event.description %></h1>
			<div style="margin-left:44%;">
				<div class="fb-like" data-href="http://pacific-gorge-2022.herokuapp.com/site/<%= @event.id %>/event" data-width="100px" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
			</div>
			<img src="<%= @event.image_large.url %>" style="width:100%;">
			<hr>
			<div class="row">
				<div class="col-md-3" style="text-align:center;">
					<h5>主辦單位： <%= @event.organization %></h5>
				</div>
				<div class="col-md-6" style="text-align:center;">
					<h5>活動時間： <%= @event.event_date.to_s(:long) %></h5>
				</div>
				<div class="col-md-3" style="text-align:center;">
					<h5>活動地點： <%= @event.location %></h5>
				</div>
			</div>
			<hr>
			<% unless @event.video == "" %>
				<iframe style="margin-left:20%;" width="560" height="315" src="//www.youtube.com/embed/<%= @event.video %>" frameborder="0" allowfullscreen></iframe>
				<hr>
			<% end %>
			<h4>
				<%= simple_format(@event.content) %>
			</h4>
			<hr>
			<div class="row">
				<div class="col-md-4" style="background-image:url('<%= @event_prev.image_small.url %>')">
					<a href="http://pacific-gorge-2022.herokuapp.com/site/<%= @event_prev.id %>/event">
						<div style="width:320px; height:170px; background-color:white; opacity:0.8; position:relative; top:-10px; left:-15px;">
							<h4 style="text-align:center; padding-top:70px; color:black;"><%= @event_prev.title %></h4>
						</div>
					</a>
				</div>
				<div class="col-md-4">
					<br>
					<br>
					<br>
					<a href="<%= @event.link %>" target="_blank">
						<p style="margin-left:33%;">
							<button type="button" class="btn btn-info btn-lg">報名活動</button>
						</p>
					</a>
				</div>
				<div class="col-md-4" style="background-image:url('<%= @event_next.image_small.url %>')">
					<a href="http://pacific-gorge-2022.herokuapp.com/site/<%= @event_next.id %>/event">
						<div style="width:320px; height:170px; background-color:white; opacity:0.8; position:relative; top:-10px; left:-15px;">
							<h4 style="text-align:center; padding-top:70px; color:black;"><%= @event_next.title %></h4>
						</div>
					</a>
				</div>
			</div>
		</div>
		<div class="col-md-2"></div>
	</div>
</body>