<head>
	<style>
		.item {
			width: 260px;
			margin: 10px;
			float: left;
		}
	</style>
</head>

<h1 style="text-align: center;">活動公告</h1>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<div class="container">
			<% @event.each do | event | %>
				<a href="<%= showEvent_path( event ) %>">
				  <div class="item thumbnail">

						  <img src="../images/join_small.png" alt="join us">
						  <h3 style="text-align:center;"><%= event.title %></h3>
						  <p style="text-align:center;"><%= truncate(event.content, :length => 20) %></p>
					</div>
			  </a>
			<% end %>
		</div>
	</div>
	<div class="col-md-1"></div>
</div>