<head>
	<style>
		.item {
			width: 260px;
			margin: 10px;
			float: left;
		}
	</style>
</head>
<body>
	<div class="container-fluid" id="top_pic" style="height:535px; background-image:url('../../images/top_pic.jpg');">
    <div style="width:250px; height:250px; border-radius:50%; margin-top:285px; margin-left:150px; background-color:#d3d3d3;">
      <h1 style="text-align:center; padding-top:110px;">活動公告</h1>
    </div>
  </div>
	<!-- <h1 style="text-align: center;">活動公告</h1> -->
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="container">
				<% @event.each do | event | %>
					<a href="<%= showEvent_path( event ) %>">
					  <div class="item thumbnail">
							  <img src="<%= event.image_small.url %>" alt="join us">
							  <h4 style="text-align:center;">[ <%= event.organization %> ]</h4>
							  <h3 style="text-align:center;"><%= event.title %></h3>
							  <p style="text-align:center;"><%= truncate(event.description, :length => 15) %></p>
						</div>
				  </a>
				<% end %>
			</div>
		</div>
		<div class="col-md-1"></div>
    <a href="#top_pic">
      <div style="width:50px; height:50px; border-radius:50%; background-color:#4169e1; position: fixed; right:50px; bottom:50px">
        <p style="text-align:center; padding-top:15px; color:#ffffff;">TOP</p>
      </div>
    </a>
	</div>
</body>