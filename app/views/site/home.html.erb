<head>
  <title>台大研究生協會-首頁</title>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
</head>
<body>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="container-fluid carousel-adjustment">

<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% for i in 0..@rotator.size-1%>
      <% if i == 0 %>
        <li data-target="#myCarousel" data-slide-to= <%= i %> class = 'active'></li>
      <% else %>  
        <li data-target="#myCarousel" data-slide-to= <%= i %>></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% i = 0 %>
    <% @rotator.order("image_order ASC").each do |r| %>
    <% if i == 0 %>
      <div class="item active">
    <% else %>
      <div class="item">
    <% end %>
    <% i+= 1 %>
      <%= image_tag r.avatar.url %>
      <div class="container">
        <div class="carousel-caption">
          <h1> <%= r.title %> </h1>
          <p>some text...</p>
          <p><a class="btn btn-large btn-primary" href="#">Click to know more</a></p>
        </div>
      </div>
    </div>
    <% end %>

  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->
      </div>
      </div>
<div class="col-md-1"></div>
  </div>
  </br>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#newest" role="tab" data-toggle="tab">最新文章</a></li>
        <li><a href="#hotest" role="tab" data-toggle="tab">熱門文章</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="newest">
          <ul>
            </br>
            <% @post_newest.each do | post | %>
              <li>
              <%= link_to(post.title, board_post_path(1, post)) %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="tab-pane" id="hotest">
          <ul>
            </br>
            <% @post_mostCommented.each do | post | %>
              <li>
                <%= link_to(post.title, board_post_path(1, post)) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div style="height:300px; width:480px">
      <a href="https://docs.google.com/forms/d/1qsxBBwfsumnP2ZTpk8ncj9rvBVD0lhoMeIMhXh08oco/viewform">
        <!-- <div class="jumbotron" style="background-image: url('images/join_small.gif');"> -->
          <img src="images/join_small.gif" alt="加入研協" style="height:300px; width:480px">
          <!-- <span style="background-color: white; width: 60; font-size: 40;">XXX</span> -->
        <!-- </div> -->
      </a>
      </div>
      <!-- <a href="/site/about">
        <img src="images/join_small.png" style="border-radius: 15px">
      </a> -->
    </div>
    <div class="col-md-1"></div>
  </div>
</body>