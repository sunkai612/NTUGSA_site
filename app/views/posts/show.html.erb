<div class="container-fluid">
	<div class="row">
		<div class="col-xs-2 col-sd-2 col-md-2 col-lg-2"></div>
		<div class="col-xs-8 col-sd-8 col-md-8 col-lg-8">
			<div class="row">
				<div class="col-xs-12 col-sd-12 col-md-12 col-lg-12">
					
					<!-- 顯示標題、作者、發文時間與內文 -->
					<h1 style="text-align:center;">
						[<%= @post.type_name %>] <%= @post.title %>
					</h1>
					<hr>
					<h4 style="text-align:right;">
						作者：<%= @post.author %>；發文時間：<%= @post.created_at.in_time_zone("Taipei").to_s(:short) %>
					</h4>
					<hr>
					<p><%= @post.content %></p>
					<hr>

					<!-- 顯示評論者、評論時間與內文 -->
					<% @comments.each do | comment | %>
						<tr>
							<td>
								<h4 style="text-align:left">
									<%= comment.commenter %>
								</h4>
							</td>
							<td>
								<h6 style="text-align:right">
									<%= comment.created_at.in_time_zone("Taipei").to_s(:short) %>
								</h6>
							</td>
							</br>
							<td> <%= comment.content %> </td>
							</br>
						</tr>
						<hr>
					<% end %>

					<!-- 新增評論 -->
					</br>
					<%= form_for @comment, url: board_post_comments_path(@board, @post) do | comment | %>
						<form role="form">
						  <div class="form-group">
								<label for="comment_commenter">評論者：</label>
								<%= comment.text_field :commenter, class: "form-control", placeholder: "請輸入評論者名稱" %>
							</div>
						  <div class="form-group">
						  	<label for="comment_content">內容：</label>
								<%= comment.text_area :content, class: "form-control", placeholder: "請輸入評論", style: "height: 68px;" %>
						  </div>
						  <button type="submit" class="btn btn-default" name="commit" style="float:right;">送出</button>
						</form>
					<% end %>
				</div>
			</div><!-- 三欄式主欄 -->
		</div>
		<div class="col-xs-2 col-sd-2 col-md-2 col-lg-2"></div>
	</div>
</div>






